<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel=stylesheet href="styles.css">
    <link rel=stylesheet href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.css">
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      google.charts.load('current', {'packages': ['corechart']});
      google.charts.setOnLoadCallback(drawChart);
      function drawChart() {

        var data = google.visualization.arrayToDataTable([
          [
            'Pilot', 'Money Made'
          ],
          [
            'Fry', <%= frym %>
          ],
          [
            'Amy', <%= amym %>
          ],
          [
            'Bender', <%= benderm %>
          ],
          ['Leela', <%= leelam %>]
        ]);

        var options = {
          title: 'Person Salary of All Pilots in Futuruma'
        };

        var chart = new google.visualization.PieChart(document.getElementById('piechart'));

        chart.draw(data, options);
      }
    </script>
    <title>Planet Express Weekly Financials</title>
  </head>
  <div class="wrapper">
    <body>
      <p>Planet Express Weekly Financials</p>
      <div class="image">
        <img src="giphy.gif" alt=""/>
        <h2>Zoidberg Loves You JWO</h2>
      </div>
      <div id="piechart" style="width: 900px; height: 500px;"></div>
      <div class="totalmoney">
        Planet Express Total Revenue for Week X is $<%= money %>.
      </div>
      <table class="gamma">
        <thead>
          <tr>
            <th>
              Planet
            </th>
            <th>
              Money Made
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              Earth
            </td>
            <td><%=earthm%></td>
          </tr>
          <tr>
            <td>
              Mercury
            </td>
            <td><%=mercurym%></td>
          </tr>
          <tr>
            <td>
              Moon
            </td>
            <td><%=moonm%></td>
          </tr>
          <tr>
            <td>
              Mars
            </td>
            <td><%=marsm%></td>
          </tr>
          <tr>
            <td>
              Jupiter
            </td>
            <td><%=jupiterm%></td>
          </tr>
          <tr>
            <td>
              Saturn
            </td>
            <td><%=saturnm%></td>
          </tr>
          <tr>
            <td>
              Pluto
            </td>
            <td><%=plutom%></td>
          </tr>
        </tbody>
      </table>
      <table class="beta">
        <thead>
          <tr>
            <th>
              Employees
            </th>
            <th>
              Number of Trips
            </th>
            <th>
              Bonus
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              Fry
            </td>
            <td><%= fryl %></td>
            <td>
              <%=frybonus %></td>
          </tr>
          <tr>
            <td>
              Amy
            </td>
            <td><%= amyl %></td>
            <td>
              <%=amybonus %></td>
          </tr>
          <tr>
            <td>
              Bender
            </td>
            <td><%= benderl %></td>
            <td>
              <%=benderbonus %></td>
          </tr>
          <tr>
            <td>
              Leela
            </td>
            <td><%= leelal %></td>
            <td>
              <%=leelabonus %></td>
          </tr>
        </tbody>
      </table>
      <table class="alpha">
        <thead>
          <tr>
            <th>
              Destinations
            </th>
            <th>
              Shipments
            </th>
            <th>
              Crates
            </th>
            <th>
              Money
            </th>
          </tr>
        </thead>
        <tbody>
          <% xyz.each do |jjj|  %>
          <tr>
            <td>
              <%= jjj["Destination"] %>
            </td>
            <td>
              <%= jjj["Shipment"] %>
            </td>
            <td>
              <%= jjj["Crates"] %>
            </td>
            <td>
              <%= jjj["Money"].to_f %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </body>
  </div>
</html>
